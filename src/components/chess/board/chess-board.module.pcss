div.board {
  width: 50em;
  height: 50em;

  max-width: 100%;
  max-height: 100%;

  display: grid;
  background-color: lightgray;
  padding: 1em;

  div.row {
    display: flex;

    div.cell {
      flex-grow: 9;
      min-width: 1.5em;
      display: flex;
      justify-content: center;
      align-items: center;

      div.piece-place {
        height: 85%;
        width: 85%;
      }
    }
  }
}
